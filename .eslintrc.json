{
  "extends": ["plugin:prettier/recommended", "plugin:@tivac/svelte/svelte"],

  "plugins": ["html", "prettier", "@tivac/svelte"],

  "settings": {
    "html/indent": "+2"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
